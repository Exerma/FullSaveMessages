{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Current version",
            "type": "firefox",
            "request": "launch",
            "reAttach": true,
            "firefoxExecutable": "/Applications/Thunderbird.app/Contents/MacOS/thunderbird-bin",
            "reloadOnChange": {
                "watch": "${workspaceFolder}/dist/release/**/*.js"
            },
            "profileDir": "${env:HOME}/Data/Sources/Thunderbird/_DebugProfiles/113",
            "keepProfileChanges": true,
            "internalConsoleOptions": "openOnSessionStart",
            "addonPath": "${workspaceFolder}/dist/release",
            "env": {
                "NODE_ENV": "development"
            }
        }        
    ]
}
