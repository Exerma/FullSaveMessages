{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Current version",
            "type": "firefox",
            "request": "launch",
            "reAttach": true,
            "firefoxExecutable": "/Applications/Thunderbird.app/Contents/MacOS/thunderbird-bin",
            "reloadOnChange": {
                "watch": "${workspaceFolder}/out/**/*.js",
                "ignore": "**/node_modules/**"
            },
            "profileDir": "${env:HOME}/Data/Sources/Thunderbird/_DebugProfiles/113",
            "keepProfileChanges": true,
            "internalConsoleOptions": "openOnSessionStart",
            "addonPath": "${workspaceFolder}/out/"
        },
        {
            "name": "Compile and launch",
            
            "type": "firefox",
            "request": "launch",
            "reAttach": true,
            "firefoxExecutable": "/Applications/Thunderbird.app/Contents/MacOS/thunderbird-bin",
            "reloadOnChange": {
                "watch": "${workspaceFolder}/out/**/*.js",
                "ignore": "**/node_modules/**"
            },
            "profileDir": "${env:HOME}/Data/Sources/Thunderbird/_DebugProfiles/113",
            "keepProfileChanges": true,
            "internalConsoleOptions": "openOnSessionStart",
            "addonPath": "${workspaceFolder}/",

            "preLaunchTask": "tsc: build - tsconfig.json; make_out.zsh",
            "outFiles": ["${workspaceFolder}/out/**/*.js"]
          },          

    ]
}
