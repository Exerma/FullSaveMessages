{
    "name": "FullSaveMessages",
    "version": "0.1.0",
    "description": "Manage emails",
    "main": "./src/root.js",
    "types": "./src/root.d.ts",
    "browser": "./src/browser.ts",
    "bin": {
        "my-cli-tool": "./dist/esbuild/cli.js"
    },
    "scripts": {
        "grunt:clean": "grunt clean",
        "grunt:copy": "grunt copy",
        "grunt:build": "grunt webpack",
        "grunt:rebuild": "grunt clean copy webpack",
        "cli": "ts-node src/cli.ts",
        "lint": "eslint src/ --ignore-pattern /node_module/ --ext .ts --ext .cjs --ext .js ",
        "test": "jest",
        "clean": "rm -rf dist build package",
        "ts-node": "ts-node",
        "docs": "typedoc --entryPoints src/root.ts",
        "build": "webpack",
        "build-all": "clean && yarn build && yarn esbuild-node && yarn esbuild-browser",
        "esbuild-browser": "esbuild src/browser.ts --bundle --minify --outfile=dist/browser.js; ./_make-out.zsh",
        "esbuild-browser:dev": "esbuild src/browser.ts --sourcemap=external --outfile=dist/browser.js; ./_make-out.zsh",
        "esbuild-browser:watch": "esbuild src/browser.ts --bundle --watch --outfile=dist/browser.js; ./_make-out.zsh"
    },
    "author": "Patrick Seuret <https://github.com/exerma>",
    "license": "MIT",
    "type": "module",
    "devDependencies": {
        "@types/jest": "^29.5.4",
        "@types/node": "^20.5.9",
        "@typescript-eslint/eslint-plugin": "^6.5.0",
        "@typescript-eslint/parser": "^6.5.0",
        "esbuild": "^0.19.2",
        "eslint": "^8.48.0",
        "eslint-config-standard-with-typescript": "^39.0.0",
        "eslint-plugin-import": "^2.28.1",
        "eslint-plugin-jsdoc": "^46.5.1",
        "eslint-plugin-n": "^16.0.2",
        "eslint-plugin-promise": "^6.1.1",
        "grunt": "^1.6.1",
        "grunt-contrib-clean": "^2.0.1",
        "grunt-contrib-compress": "^2.0.0",
        "grunt-contrib-copy": "^1.0.0",
        "grunt-eslint": "^24.3.0",
        "grunt-webpack": "^6.0.0",
        "jest": "^29.6.4",
        "ts-jest": "^29.1.1",
        "ts-loader": "^9.4.4",
        "ts-node": "^10.9.1",
        "typescript": "^5.2.2",
        "webpack": "^5.88.2",
        "webpack-cli": "^5.1.4"
    },
    "dependencies": {
        "jspdf": "^2.5.1"
    }
}
